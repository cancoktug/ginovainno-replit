# =============================================================================
# ITU Ginova - Environment Variables Template
# Copy this file to .env and fill in your actual values
# =============================================================================

# -----------------------------------------------------------------------------
# Database Configuration (Required)
# -----------------------------------------------------------------------------
# Neon PostgreSQL connection string
DATABASE_URL=postgresql://username:password@host/database?sslmode=require

# -----------------------------------------------------------------------------
# Session Configuration (Required for production)
# -----------------------------------------------------------------------------
# Generate a strong random string: openssl rand -base64 32
SESSION_SECRET=your-super-secret-session-key-change-this

# -----------------------------------------------------------------------------
# Application URLs
# -----------------------------------------------------------------------------
# Base URL for the application (used for password reset links, etc.)
BASE_URL=https://ginova.itu.edu.tr

# -----------------------------------------------------------------------------
# Server Configuration
# -----------------------------------------------------------------------------
# Environment: development or production
NODE_ENV=production

# Port the Node.js server listens on
PORT=5000

# Host binding
HOST=0.0.0.0

# -----------------------------------------------------------------------------
# File Upload Configuration
# -----------------------------------------------------------------------------
# Directory for uploaded files (absolute path on production server)
UPLOAD_DIR=/home/ginovalno/public_html/uploads

# -----------------------------------------------------------------------------
# Session Cookie Settings (for reverse proxy setups)
# -----------------------------------------------------------------------------
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_SAMESITE=lax
SESSION_COOKIE_DOMAIN=ginova.itu.edu.tr

# -----------------------------------------------------------------------------
# Email Configuration (ITU SMTP)
# -----------------------------------------------------------------------------
EMAIL_HOST=outgoing.itu.edu.tr
EMAIL_PORT=587
EMAIL_USER=ginova@itu.edu.tr
EMAIL_PASSWORD=your-email-password
EMAIL_FROM=ginova@itu.edu.tr

# Fallback email settings
FROM_EMAIL=noreply@ginova.itu.edu.tr
ADMIN_EMAIL=ginova@itu.edu.tr

# -----------------------------------------------------------------------------
# SendGrid Configuration (Optional - for backup email)
# -----------------------------------------------------------------------------
# SENDGRID_API_KEY=your-sendgrid-api-key

# -----------------------------------------------------------------------------
# Replit Object Storage (Only on Replit - auto-configured)
# -----------------------------------------------------------------------------
# These are auto-set on Replit, leave empty for production
# PUBLIC_OBJECT_SEARCH_PATHS=
# PRIVATE_OBJECT_DIR=
